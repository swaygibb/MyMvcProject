@model MyMvcProject.Models.BlogPost

@{
    ViewData["Title"] = @Model.Title;
}

<div class="text-light">
    <h1 class="display-4">@Model.Title</h1>
    <p class="text-muted">@Model.CreatedAt.ToString("f")</p>
    <hr />
    <p style="white-space: pre-line">@Model.Content</p>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-4">Back to Blog</a>
</div>
