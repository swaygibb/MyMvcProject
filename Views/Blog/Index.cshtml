@model IEnumerable<MyMvcProject.Models.BlogPost>

@{
    ViewData["Title"] = "Blog Manager";
}

<div class="text-left mb-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="text-end">
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New Blog Post</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center text-light bg-secondary">
        <strong>No blog posts available.</strong> Use the button above to create your first blog post!
    </div>
}
else
{
    <table class="table table-dark table-bordered table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = post.Id })" class="btn btn-info">View</a>
                        <a href="@Url.Action("Delete", new { id = post.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
